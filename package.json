{
  "name": "busan-ycc-website",
  "version": "1.0.0",
  "description": "부산청년사업가들 웹사이트",
  "type": "module",
  "scripts": {
    "dev": "vite",
    "start": "vite",
    "start:local": "vite",
    "test": "vite --port 5173 --host 127.0.0.1",
    "test:env": "echo '▶ 테스트 환경: docs/테스트_환경_조성.md 참고' && echo '▶ API: .env.development 의 VITE_API_URL 사용' && echo '▶ 브라우저: http://127.0.0.1:3000' && npm run dev",
    "test:env:emulator": "concurrently -n front,api -c blue,green \"npm run dev\" \"firebase emulators:start --only functions\"",
    "test:local": "echo '로컬 테스트: npm run test 실행 후 http://127.0.0.1:5173 접속. 자세한 가이드는 빠른_시작.md 또는 로컬_테스트_가이드.md 참고.'",
    "test:quick": "echo '✅ 빠른 시작 가이드는 빠른_시작.md 파일을 확인하세요!' && npm run test",
    "build": "vite build",
    "preview": "vite preview",
    "deploy": "npm run build && firebase deploy",
    "deploy:hosting": "npm run build && firebase deploy --only hosting",
    "deploy:functions": "firebase deploy --only functions",
    "emulators": "firebase emulators:start",
    "emulators:functions": "firebase emulators:start --only functions",
    "telemetry": "node scripts/telemetry-server.mjs",
    "close-past-seminars": "node scripts/close-past-seminars.mjs",
    "close-past-seminars:dry-run": "node scripts/close-past-seminars.mjs --dry-run"
  },
  "dependencies": {
    "@dnd-kit/core": "^6.3.1",
    "@dnd-kit/sortable": "^10.0.0",
    "@dnd-kit/utilities": "^3.2.2",
    "axios": "^1.6.0",
    "cors": "^2.8.5",
    "express": "^4.18.2",
    "firebase": "^10.7.1",
    "lucide-react": "^0.294.0",
    "node-fetch": "^3.3.2",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "react-easy-crop": "^5.0.4",
    "react-router-dom": "^6.20.0"
  },
  "devDependencies": {
    "firebase-admin": "^11.11.0",
    "@vitejs/plugin-react": "^4.2.1",
    "autoprefixer": "^10.4.16",
    "concurrently": "^8.2.2",
    "postcss": "^8.4.32",
    "tailwindcss": "^3.3.6",
    "vite": "^5.0.8"
  }
}
