rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    // 회원: 목록 공개, 쓰기는 로그인 사용자만 (관리자/회원가입 등)
    match /users/{userId} {
      allow read: if true;
      allow create: if request.auth != null;
      allow update, delete: if request.auth != null;
    }

    // 회원 알림 서브컬렉션: 본인만 읽기/쓰기
    match /users/{userId}/notifications/{notificationId} {
      allow read, write: if request.auth != null && request.auth.uid == userId;
    }

    // 프로그램/세미나: 읽기 공개, 쓰기는 로그인 사용자만
    match /seminars/{seminarId} {
      allow read: if true;
      allow create, update, delete: if request.auth != null;
    }

    // 게시글(커뮤니티·후기): 읽기 공개, 쓰기는 로그인 사용자만
    match /posts/{postId} {
      allow read: if true;
      allow create, update, delete: if request.auth != null;
    }

    // 프로그램 신청: 읽기는 전체 허용(관리자 명단 표시용), 쓰기는 로그인 사용자만
    // 참고: 관리자 페이지가 Firebase Auth 없이 접근될 수 있어 read를 허용함. 민감 정보 포함 시 나중에 규칙 조정 가능.
    match /applications/{applicationId} {
      allow read: if true;
      allow create, update, delete: if request.auth != null;
    }

    // 앱 설정(메뉴 등): 읽기 공개, 쓰기는 로그인 사용자만
    match /settings/{document=**} {
      allow read: if true;
      allow write: if request.auth != null;
    }

    // 사이트 콘텐츠: 읽기 공개, 쓰기는 로그인 사용자만
    match /siteContent/{document=**} {
      allow read: if true;
      allow write: if request.auth != null;
    }

    // 검색 로그: 로그인 사용자만 생성·조회
    match /searchLogs/{logId} {
      allow read, write: if request.auth != null;
    }

    // 맛집: 읽기 공개, 쓰기는 로그인 사용자만
    match /restaurants/{restaurantId} {
      allow read: if true;
      allow create, update, delete: if request.auth != null;
    }

    // 강제 탈퇴 재가입 차단 목록: 클라이언트 접근 불가, Cloud Functions(Admin)에서만 사용
    match /blockedRegistrations/{docId} {
      allow read, write: if false;
    }
  }
}
